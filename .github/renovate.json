{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":gitSignOff",
    ":pinVersions",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":enableVulnerabilityAlerts",
    ":combinePatchMinorReleases",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    "security:openssf-scorecard",
    "schedule:nonOfficeHours"
  ],
  "labels": ["dependencies"],
  "rebaseWhen": "auto",
  "packageRules": [
    {
      "groupName": "fumadocs packages",
      "matchPackageNames": ["/^fumadocs-.*/"]
    },
    {
      "groupName": "SettleMint SDK",
      "groupSlug": "settlemint",
      "matchPackageNames": ["/^@settlemint//"]
    },
    {
      "matchManagers": ["docker-compose"],
      "matchDatasources": ["docker"],
      "matchFileNames": ["docker-compose.yml"],
      "matchPackageNames": [
        "ghcr.io/settlemint/codestudio-asset-tokenization-kit"
      ],
      "matchCurrentValue": "/^2\\.0\\.0(?:-.+)?$/",
      "allowedVersions": "/^2\\.0\\.0(?:-(?:beta|rc|main)\\.[0-9]+)?$/",
      "versioning": "regex:^(?<major>2)\\.(?<minor>0)\\.(?<patch>0)(?:-(?<prerelease>(?:beta|rc|main))\\.(?<build>[0-9]+))?$",
      "ignoreUnstable": false,
      "respectLatest": false,
      "automerge": true
    }
  ],
  "hostRules": [
    {
      "timeout": 3000000
    },
    {
      "hostType": "docker",
      "matchHost": "ghcr.io",
      "username": "{{ secrets.GITHUB_USER }}",
      "password": "{{ secrets.GITHUB_PASS }}"
    },
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "{{ secrets.DOCKER_USER }}",
      "password": "{{ secrets.DOCKER_PASS }}"
    }
  ]
}
