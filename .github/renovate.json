{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergeMinor",
    ":automergePr",
    ":automergeRequireAllStatusChecks",
    ":gitSignOff",
    ":pinVersions",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":enableVulnerabilityAlerts",
    ":combinePatchMinorReleases",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone",
    "security:openssf-scorecard",
    "schedule:nonOfficeHours"
  ],
  "labels": [
    "dependencies"
  ],
  "rebaseWhen": "conflicted",
  "packageRules": [
    {
      "groupName": "bull-board",
      "matchPackageNames": [
        "/bull-board/"
      ]
    },
    {
      "groupName": "taquito",
      "matchPackageNames": [
        "/taquito/"
      ]
    },
    {
      "groupName": "nestjs",
      "matchPackageNames": [
        "/nestjs/"
      ]
    },
    {
      "groupName": "pulumi",
      "matchPackageNames": [
        "/pulumi/"
      ]
    },
    {
      "groupName": "hasura",
      "matchPackageNames": [
        "/hasura/"
      ]
    },
    {
      "groupName": "fabric",
      "matchPackageNames": [
        "/hyperledger/fabric/"
      ]
    },
    {
      "groupName": "graphiql",
      "matchPackageNames": [
        "/graphiql/"
      ]
    },
    {
      "groupName": "graphiql",
      "matchPackageNames": [
        "/graphiql/"
      ]
    },
    {
      "groupName": "kubo",
      "matchPackageNames": [
        "/kubo/"
      ]
    },
    {
      "groupName": "bpaas",
      "matchPackageNames": [
        "/settlemint/bpaas/"
      ]
    },
    {
      "groupName": "bpaas/smartcontractsets",
      "matchPackageNames": [
        "/settlemint/bpaas/smartcontractsets/",
        "!/settlemint/bpaas/onprem/",
        "!/settlemint/bpaas/serivces/",
        "!/settlemint/bpaas/saas/"
      ]
    },
    {
      "groupName": "hyperledger/fabric",
      "matchPackageNames": [
        "/hyperledger/fabric/"
      ]
    },
    {
      "enabled": false,
      "matchPackageNames": [
        "/docusaurus/"
      ]
    }
  ],
  "hostRules": [
    {
      "timeout": 3000000
    },
    {
      "hostType": "docker",
      "matchHost": "ghcr.io",
      "username": "{{ secrets.GITHUB_USER }}",
      "password": "{{ secrets.GITHUB_PASS }}"
    },
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "{{ secrets.DOCKER_USER }}",
      "password": "{{ secrets.DOCKER_PASS }}"
    }
  ]
}
